@model MyAcademy_MVC_CodeFirst.Data.Entities.Category
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 4v16m8-8H4" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Yeni Kayıt</h1>
                <p class="ai-subtitle">Sisteme yeni bir veri ekleyin</p>
            </div>
        </div>
        <a asp-action="Index" asp-controller="YourController" class="ai-btn-secondary">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M19 12H5m7 7l-7-7 7-7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            Listeye Dön
        </a>
    </div>

    <div class="ai-form-wrapper">
        <form asp-action="Create" asp-controller="YourController" method="post" class="ai-form" autocomplete="off">

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Ad <span class="required">*</span></label>
                    <div class="input-wrapper">
                        <input asp-for="Name" class="form-input" placeholder="Örn: Ürün Adı veya Başlık" />
                        <span class="input-focus-border"></span>
                    </div>
                    <span asp-validation-for="Name" class="form-error"></span>
                    <p class="form-hint">Lütfen kaydın görünecek adını giriniz.</p>
                </div>

            </div>

            <div class="form-divider"></div>

            <div class="form-actions">
                <a asp-action="Index" asp-controller="YourController" class="btn-cancel">İptal Et</a>
                <button type="submit" class="btn-submit">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z" /><polyline points="17 21 17 13 7 13 7 21" /><polyline points="7 3 7 8 15 8" /></svg>
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    /* Ana Konteyner (Index sayfasıyla uyumlu) */
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    /* Header */
    .ai-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        flex-wrap: wrap;
        gap: 20px;
    }

    .ai-header-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    /* Create sayfası için Yeşil Tema */
    .ai-icon-wrapper {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #10b981, #059669); /* Zümrüt Yeşili */
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
    }

    .ai-header-icon {
        width: 30px;
        height: 30px;
        color: white;
    }

    .ai-title {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin: 0;
        line-height: 1.2;
    }

    .ai-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 5px 0 0 0;
        font-size: 0.95rem;
    }

    /* İkincil Buton (Geri Dön) */
    .ai-btn-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 12px 24px;
        border-radius: 12px;
        color: rgba(255, 255, 255, 0.8);
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .ai-btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        transform: translateY(-1px);
    }

    /* Form Wrapper */
    .ai-form-wrapper {
        max-width: 700px;
        margin: 0 auto;
    }

    .ai-form {
        background: rgba(30, 41, 59, 0.4);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        color: #e2e8f0;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

    .form-label .required {
        color: #ef4444;
        margin-left: 4px;
    }

    .input-wrapper {
        position: relative;
    }

    .form-input {
        width: 100%;
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        padding: 14px 16px;
        color: white;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: #10b981; /* Focus rengi yeşil */
        background: rgba(15, 23, 42, 0.8);
        box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
    }

    .form-input::placeholder {
        color: rgba(255, 255, 255, 0.3);
    }

    .form-hint {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.4);
        margin-top: 6px;
    }

    .form-error {
        color: #f87171;
        font-size: 0.85rem;
        margin-top: 6px;
        display: block;
    }

    .form-divider {
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        margin: 30px 0;
    }

    /* Aksiyon Butonları */
    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        align-items: center;
    }

    .btn-submit {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
    }

    .btn-cancel {
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
        font-weight: 500;
        padding: 10px 20px;
        border-radius: 8px;
        transition: all 0.2s;
    }

    .btn-cancel:hover {
        color: white;
        background: rgba(255, 255, 255, 0.05);
    }

    /* Mobil Responsive */
    @@media (max-width: 768px) {
        .ai-container {
            padding: 30px 20px;
            margin: -15px -15px;
        }

        .ai-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-btn-secondary {
            width: 100%;
            justify-content: center;
        }

        .form-actions {
            flex-direction: column-reverse; /* Mobilde Kaydet butonu üstte olsun */
        }

        .btn-submit, .btn-cancel {
            width: 100%;
            justify-content: center;
        }
    }
</style>


